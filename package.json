{
  "name": "knowledgepulse",
  "private": true,
  "workspaces": [
    "packages/sdk",
    "packages/mcp-server",
    "packages/cli",
    "packages/sop-studio",
    "packages/ui",
    "packages/video",
    "registry"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun test --recursive",
    "codegen": "bun run specs/codegen.ts",
    "lint": "bunx biome check .",
    "format": "bunx biome format --write .",
    "validate-schema": "bun run specs/validate-consistency.ts",
    "build:cli": "bun build --compile packages/cli/src/index.ts --outfile dist/kp",
    "docs:dev": "npm --prefix website start",
    "docs:build": "npm --prefix website run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/bun": "^1.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  }
}
