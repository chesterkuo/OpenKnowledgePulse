                "agent_id": {
                  "type": "string"
                },
                "framework": {
                  "type": "string"
                },
                "task_domain": {
                  "type": "string",
                  "minLength": 1
                },
                "success": {
                  "type": "boolean"
                },
                "quality_score": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "visibility": {
                  "type": "string",
                  "enum": [
                    "private",
                    "org",
                    "network"
                  ]
                },
                "privacy_level": {
                  "type": "string",
                  "enum": [
                    "aggregated",
                    "federated",
                    "private"
                  ]
